{
  "include": [
      "./src/**/*",
      "./src/custom.d.ts",
  ],
  "compilerOptions": {
    "target": "es6",                    
    "module": "es6",                
    "lib": ["DOM", "es2019"],
    "rootDir": "./src",                   
    "outDir": "./build",                               
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "noImplicitAny": true,                 
    "strictNullChecks": true,             
    "strictFunctionTypes": true,         
    "noImplicitThis": true,             
    "noImplicitReturns": true,         
    "skipLibCheck": true              
  }
}
